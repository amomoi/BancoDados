<%- model_class = Bdcliente -%>
<div class="page-header">
<br>
<p><font size="5" color="4E6E58">Clientes</font></p>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome_empresa) %></th>
      <th><%= model_class.human_attribute_name(:site) %></th>
      <th><%= model_class.human_attribute_name(:ativo_inativo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bdclientes.each do |bdcliente| %>
      <tr>
        <td><%= link_to bdcliente.id, bdcliente_path(bdcliente) %></td>
        <td><%= bdcliente.nome_empresa %></td>
        <td><%= bdcliente.site %></td>
        <td><%= bdcliente.ativo_inativo %></td>
        <td><%=l bdcliente.created_at %></td>
        <td><%= link_to  'Listagem Sensores', bdcliente_bdsensors_path(bdcliente) %></td>
        <td><%= link_to  'Listagem Usuarios', bdcliente_bdusuarios_path(bdcliente) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      bdcliente_path(bdcliente), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bdcliente_path(bdcliente), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bdcliente_path(bdcliente),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bdcliente_path,
            :class => 'btn btn-primary' %>
