<%= form_for @bdcliente, :html => { :class => "form-horizontal bdcliente" } do |f| %>

  <% if @bdcliente.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bdcliente.errors.count, "error") %> prohibited this bdcliente from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bdcliente.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome_empresa, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome_empresa, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome_empresa) %>
  </div>
  <div class="form-group">
    <%= f.label :site, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :site, :class => 'form-control' %>
    </div>
    <%=f.error_span(:site) %>
  </div>
  <div class="form-group">
    <%= f.label :ativo_inativo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ativo_inativo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ativo_inativo) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bdclientes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
