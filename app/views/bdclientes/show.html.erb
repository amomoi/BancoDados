<%- model_class = Bdcliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome_empresa) %>:</strong></dt>
  <dd><%= @bdcliente.nome_empresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site) %>:</strong></dt>
  <dd><%= @bdcliente.site %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ativo_inativo) %>:</strong></dt>
  <dd><%= @bdcliente.ativo_inativo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              bdclientes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bdcliente_path(@bdcliente), :class => 'btn btn-default' %>
<%= button_to t('.destroy', :default => t("helpers.links.destroy")),
              bdcliente_path(@bdcliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
