<%= form_for @bdusuario, :html => { :class => "form-horizontal bdusuario" } do |f| %>

  <% if @bdusuario.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bdusuario.errors.count, "error") %> prohibited this bdusuario from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bdusuario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :CPF, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :CPF, :class => 'form-control' %>
    </div>
    <%=f.error_span(:CPF) %>
  </div>
  <div class="form-group">
    <%= f.label :celular, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :celular, :class => 'form-control' %>
    </div>
    <%=f.error_span(:celular) %>
  </div>
  <div class="form-group">
    <%= f.label :senha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :senha, :class => 'form-control' %>
    </div>
    <%=f.error_span(:senha) %>
  </div>
  <div class="form-group">
    <%= f.label :SMS, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= f.select(:SMS, options_for_select([["Sim", "1"], ["Nao", "0"]], @bdusuario.SMS), {include_blank: "Selecione"}) %>
    </div>
    <%=f.error_span(:SMS) %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :ativo_inativo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <!-- <%= f.text_field :ativo_inativo, :class => 'form-control' %> -->
      <%= f.select(:ativo_inativo, options_for_select([["Ativo", "1"], ["Inativo", "0"]], @bdusuario.ativo_inativo), {include_blank: "Selecione"}) %>
    </div>
    <%=f.error_span(:ativo_inativo) %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :Cliente, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <!-- <%= f.text_field :bdcliente_id, :class => 'form-control' %> -->
      <%= f.collection_select(:bdcliente_id, Bdcliente.all, :id, :nome_empresa, include_blank: true) %>
    </div>
    <%=f.error_span(:bdcliente_id) %>
  </div>
  <br>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bdusuarios_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
