<%- model_class = Bdtipo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tipo_sensor) %>:</strong></dt>
  <dd><%= @bdtipo.tipo_sensor %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              bdtipos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bdtipo_path(@bdtipo), :class => 'btn btn-default' %>
<%= button_to t('.destroy', :default => t("helpers.links.destroy")),
              bdtipo_path(@bdtipo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
