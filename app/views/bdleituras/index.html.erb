<%- model_class = Bdleitura -%>
<div class="page-header">
<br>
<p><font size="5" color="4E6E58">Leituras</font></p>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:bdsensor_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bdleituras.each do |bdleitura| %>
      <tr>
        <td><%= link_to bdleitura.id, bdleitura_path(bdleitura) %></td>
        <td><%= bdleitura.valor %></td>
        <td><%= bdleitura.bdsensor.nome_sensor %></td>
        <td><%=l bdleitura.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      bdleitura_path(bdleitura), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bdleitura_path(bdleitura), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bdleitura_path(bdleitura),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bdleitura_path,
            :class => 'btn btn-primary' %>
