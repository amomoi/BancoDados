<%= form_for @bdleitura, :html => { :class => "form-horizontal bdleitura" } do |f| %>

  <% if @bdleitura.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bdleitura.errors.count, "error") %> prohibited this bdleitura from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bdleitura.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :valor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valor) %>
  </div>
  <div class="form-group">
    <%= f.label :bdsensor_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= f.collection_select(:bdsensor_id, Bdsensor.all, :id, :nome_sensor, include_blank: true) %>
    </div>
    <%=f.error_span(:bdsensor_id) %>
  </div>
  <br>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bdleituras_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
